<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:background="@drawable/add_back"
    android:gravity="center">

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
<!-- 姓名 -->
    <TextView
        android:layout_width="wrap_content"
        android:textColor="#e8e8e8"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:text="Name"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:textColor="#e8e8e8"
        android:textSize="12sp"
        android:textColorHint="#59e8e8e8"
        android:hint="Your name"/>

    <!-- 号码 -->
    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:textColor="#e8e8e8"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:text="PhoneNumber"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#e8e8e8"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="12sp"
        android:textColorHint="#59e8e8e8"
        android:hint="Your fixed-line telephone"/>

    <!-- 邮箱 -->
    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:textColor="#e8e8e8"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:text="E-mail"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#e8e8e8"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="12sp"
        android:textColorHint="#59e8e8e8"
        android:hint="Your E-mail"/>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <Button
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:text="Confirm"
            android:textSize="12sp"
            android:layout_height="match_parent"
            android:background="@drawable/dialog_ok"/>

        <Button
            android:id="@+id/no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:text="cancel"
            android:textSize="12sp"
            android:layout_height="match_parent"
            android:background="@drawable/dialog_no"/>
    </LinearLayout>

</LinearLayout>